<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Custom Css -->
    <link rel="stylesheet" href="/assets/css/home.css">
</head>

<body>
    <div class="side-navbar">
        <!-- Nav List -->
        <ul class="nav-list">
            <li class="nav-list-items">
                <i class="bi bi-filetype-csv"></i>
                My Files
            </li>
            <li class="nav-list-items">
                <i class="bi bi-clock"></i>
                Recent
            </li>
            <li class="nav-list-items">
                <i class="bi bi-star"></i>
                Favourite
            </li>
            <li class="nav-list-items">
                <i class="bi bi-trash3"></i>
                Trash
            </li>
            <li class="nav-list-items">
                <i class="bi bi-gear"></i>
                Settings
            </li>
        </ul>
    </div>


    <div class="content">
        <!-- Logo -->
        <div class="content-header">
            <div class="logo">
                <Strong>CSV</Strong>
                <span>Upload</span>
            </div>

            <!-- Upload Button -->
            <button class="upload-files">Upload</button>
        </div>


        <!-- Search Bar -->
        <div class="search-bar">
            <input type="text" class="search-input" placeholder="Type anything to Search">
            <!-- Search Bar Icon -->
            <i class="bi bi-search"></i>
        </div>

        <!-- Upload Area for Browse/Drag and Drop -->
        <h3>Upload Files</h3>
        <div class="upload-box"  onclick="handleUploadClick()">
            <img src="/assets/images/csv.png" alt="">
            <h4>Drag and Drop Files, or Click to Browse
            </h4>
            <p>Supports CSV files only</p>
        </div>
        <!-- Files Container -->
        <div class="files-container">
            <div class="files-header">
                <h3>Files</h3>
                <!-- View Toggler -->
                <div class="view-toggler">
                    <div class="grid-view view-mode">
                        <i class="bi bi-grid"></i>
                    </div>
                    <div class="list-view view-mode">
                        <i class="bi bi-list-ul"></i>
                    </div>
                </div>
            </div>
            <!-- Files -->
            <table class="files">
                <thead class="thead">
                    <tr>
                        <th>SL. No</th>
                        <th class="header-1">File Name</th>
                        <th>Size</th>
                        <th>View</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i< files.length; i++) { %>
                        <% let sl= i+ 1 %>
                        <tr>
                            <td><%= sl %></td>
                            <td><%= files[i].originalname %></td>
                            <td><%= files[i].size %></td>
                            <td><a href="/view/<%= files[i]._id %>">View</a></td>
                            <td><a href="/delete/<%= files[i]._id %>">Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>


    <div class="user-section">
        <div class="account-details">
            <img src="/assets/images/man (1).png" alt="" class="user-img">
            <h3 class="user-name">Ashis Kumar Yadav</h3>
        </div>

        <div class="storage-container">
            <h3>Storage</h3>
            <div class="storage-bar">
                <div class="used-storage">

                </div>
            </div>
            <!-- Upgrade Plans -->

            <div class="upgrade-storage">
                <h3>Select Plans</h3>
                <div class="plans">
                    <div class="upgrade-plans">
                        <h4>10GB</h4>

                        <p>Free Plan</p>
                    </div>
                    <div class="upgrade-plans">
                        <h4>100GB</h4>

                        <p>Pro Plan</p>
                    </div>
                </div>
                <div class="upgrade-pro">
                    <div class="upgrade-btn">
                        <img src="/assets/images/crown.png" alt="">
                        Upgrade to Premium
                    </div>
                </div>
            </div>

        </div>

        <a href="#" class="sign-out">
            <i class="bi bi-box-arrow-left"></i>
            Sign Out</a>

    </div>

    <script src="/assets/js/home.js"></script>
</body>

</html>